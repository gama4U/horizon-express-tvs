                    <Popover>
                      <PopoverTrigger asChild>
                        <FormControl>
                          <Button
                            variant="outline"
                            role="combobox"
                            className={`w-full justify-between ${!field.value && "text-muted-foreground"} text-xs`}
                          >
                            {field.value
                              ? (() => {
                                const salesAgreement = salesAgreements?.salesAgreements?.find(salesAgreement => salesAgreement.serialNumber === field.value);
                                return salesAgreement ? `${salesAgreement.clientName}` : "Sales Agreement not found";
                              })()
                              : "Select sales agreement"}
                            <ChevronsUpDown className="ml-2 h-4 w-4 shrink-0 opacity-50" />
                          </Button>
                        </FormControl>
                      </PopoverTrigger>
                      <PopoverContent className="w-[200px] p-0">
                        <Command>
                          <CommandInput placeholder="Search by serial number" className="text-xs" />
                          <CommandList>
                            <CommandEmpty className="text-xs p-4">No sales agreement found.</CommandEmpty>
                            <CommandGroup>
                              {salesAgreements?.salesAgreements.map((salesItem) => (
                                <CommandItem
                                  key={salesItem.serialNumber}
                                  value={`${salesItem.serialNumber}`}
                                  className="text-xs"
                                  onSelect={() => {
                                    form.setValue("salesAgreementId", salesItem.id)
                                  }}
                                >
                                  <Check
                                    className={`text-xs mr-2 h-4 w-4 ${value === `${salesItem.clientName}` ? "opacity-100" : "opacity-0"}`}
                                  />
                                  {salesItem.clientName}
                                </CommandItem>
                              ))}
                            </CommandGroup>
                          </CommandList>
                        </Command>
                      </PopoverContent>
                    </Popover>


<div className="flex flex-row items-center gap-x-2">
              <p className="text-xs flex-shrink-0 w-1/3">Purchase Involve Number:</p>
              <FormField
                name="purchaseOrderId"
                control={form.control}
                render={({ field }) => (
                  <FormItem className="w-full">
                    <FormControl>
                      <CommonInput
                        placeholder="Suppliers Involve Purchase Order #"
                        onChange={field.onChange}
                        defaultValue={field.value}
                        containerProps={{
                          className: 'flex-1',
                        }}
                      />
                    </FormControl>
                  </FormItem>
                )}
              />
            </div>

